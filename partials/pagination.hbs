<nav class="pagination" role="navigation">
  {{#if prev}}
    <a class="button newer-posts" href="{{page_url prev}}">
      <i class="fa fa-arrow-circle-left"></i>
    </a>
  {{/if}}

  {{#if next}}
    <a class="button older-posts" href="{{page_url next}}">
      <i class="fa fa-arrow-circle-right"></i>
    </a>
  {{/if}}
</nav>
