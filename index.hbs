{{!< default}}

<header class="blog-header">
  {{#if @blog.logo}}
    <a href="{{@blog.url}}">
      <img class="blog-logo" src="{{@blog.logo}}"/>
    </a>
  {{/if}}

  {{#if @blog.title}}
    <h1 class="blog-title">{{@blog.title}}</h1>
  {{/if}}

  {{#if @blog.description}}
    <p class="blog-description">"{{@blog.description}}"</p>
  {{/if}}

  <div class="nav">
    {{#if @blog.twitter}}
      <a class="button" href="{{twitter_url}}">{{@blog.twitter}}</a>
    {{/if}}
    <a class="button" href="{{@blog.url}}">{{@blog.url}}</a>
  </div>
</header>

{{#foreach posts}}
  <article class="{{post_class}}">
    <header class="post-header">
      <time class="post-date" datetime="{{published_at}}">
        {{date format="MMMM Do, YYYY"}}
      </time>
      <h1 class="post-title">
        <a href="{{url}}">{{title}}</a>
      </h1>
    </header>
    <div class="post-content">
      {{{content words=150}}}
    </div>
    <a class="button" href="{{url}}">
      Continue reading <i class="fa fa-arrow-circle-right"></i>
    </a>
  </article>
  <hr>
{{/foreach}}

<div class="post-navigation">
  {{pagination}}
</div>
